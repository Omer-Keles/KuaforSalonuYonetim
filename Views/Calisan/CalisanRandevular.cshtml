@model List<KuaforSalonuYonetim.Models.Randevu>
@{
ViewData["Title"] = "Çalışan Randevuları";
var calisanAdi = ViewData["CalisanAdi"] as string;
}

<div class="container my-5">
    <h2>@calisanAdi - Randevular</h2>

    @if (Model != null && Model.Any())
    {
    <table class="table table-striped table-bordered mt-4">
        <thead class="table-light">
        <tr>
            <th>Tarih</th>
            <th>İşlem</th>
            <th>Başlangıç Saati</th>
            <th>Bitiş Saati</th>
            <th>Ücret</th>
            <th>Müşteri</th>
            <th>Durum</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var randevu in Model)
        {
        <tr>
            <td>@randevu.RandevuTarihi.ToString("yyyy-MM-dd")</td>
            <td>@randevu.Islem.IslemAdi</td>
            <td>@randevu.BaslangicSaati</td>
            <td>@randevu.BitisSaati</td>
            <td>@randevu.Ucret</td>
            <td>@randevu.Kullanici.Kullanici_Adi @randevu.Kullanici.Kullanici_Soyad</td>
            <td>@randevu.Durum</td>
        </tr>
        }
        </tbody>
    </table>
    }
    else
    {
    <p class="text-muted">Bu çalışana ait randevu bulunmamaktadır.</p>
    }

    <a href="@Url.Action("Index", "Calisan")" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Çalışanlar Listesine Dön
    </a>
</div>
