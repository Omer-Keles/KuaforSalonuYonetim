@model KuaforSalonuYonetim.Models.Calisan

<div class="container my-5">
    <h2>@Model.CalisanAdi @Model.CalisanSoyadi - Düzenle</h2>

    <form asp-action="Duzenle" method="post">
        <input type="hidden" asp-for="CalisanId" />
        <div class="mb-3">
            <label asp-for="CalisanAdi" class="form-label">Adı</label>
            <input asp-for="CalisanAdi" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CalisanSoyadi" class="form-label">Soyadı</label>
            <input asp-for="CalisanSoyadi" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefon</label>
            <input asp-for="Telefon" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>