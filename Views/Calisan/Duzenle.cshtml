@model KuaforSalonuYonetim.Models.Calisan

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center">
                    <h3 class="mb-0">Çalışan Düzenle</h3>
                </div>
                <div class="card-body">
                    <!-- Hata Mesajları -->
                    @if (TempData["HataMesaji"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["HataMesaji"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Düzenleme Formu -->
                    <form asp-action="Duzenle" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="CalisanId" />

                        <div class="mb-4">
                            <label asp-for="CalisanAdi" class="form-label">Adı</label>
                            <input asp-for="CalisanAdi" class="form-control form-control-lg" placeholder="Örn: Ahmet" required />
                            <div class="invalid-feedback">Lütfen çalışan adını giriniz.</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CalisanSoyadi" class="form-label">Soyadı</label>
                            <input asp-for="CalisanSoyadi" class="form-control form-control-lg" placeholder="Örn: Yılmaz" required />
                            <div class="invalid-feedback">Lütfen çalışan soyadını giriniz.</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Telefon" class="form-label">Telefon</label>
                            <input asp-for="Telefon" class="form-control form-control-lg" placeholder="Örn: 0555 555 5555" required />
                            <div class="invalid-feedback">Lütfen geçerli bir telefon numarası giriniz.</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap form validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
