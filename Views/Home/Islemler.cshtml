@{
    ViewData["Title"] = "Home Page";
    var salon = ViewData["Salon"] as Salon;
    var calismaSaatleri = ViewData["CalismaSaatleri"] as List<CalismaSaatleri>;
}


<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="h-100">
                    <img class="img-fluid h-100" src="~/img/open.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="bg-secondary h-100 d-flex flex-column justify-content-center p-5">
                    <p class="d-inline-flex bg-dark text-primary py-1 px-4 me-auto">Çalışma Saatlerimiz</p>
                    <h1 class="text-uppercase mb-4">@salon?.SalonAdi</h1>

                    @foreach (var saat in calismaSaatleri)
                    {
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <h6 class="text-uppercase mb-0">@saat.Gun</h6>
                            <span class="text-uppercase">@saat.BaslangicSaati - @saat.BitisSaati</span>
                        </div>
                    }
                    <div class="d-flex justify-content-between py-2">
                        <h6 class="text-uppercase mb-0">Pazar</h6>
                        <span class="text-uppercase text-primary">Kapalı</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model List<KuaforSalonuYonetim.Models.Islem>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 600px;">
            <p class="d-inline-block bg-secondary text-primary py-1 px-4">Hizmetlerimiz</p>
            <h1 class="text-uppercase">Neler Sunuyoruz</h1>
        </div>
        <div class="row g-4">
            @foreach (var islem in Model)
            {
            <div class="col-lg-4 col-md-6">
                <div class="service-item position-relative overflow-hidden bg-secondary d-flex h-100 p-5 ps-0">
                    <div class="bg-dark d-flex flex-shrink-0 align-items-center justify-content-center" style="width: 60px; height: 60px;">
                        <img class="img-fluid" src="~/img/beard-trim.png" alt="@islem.IslemAdi">
                    </div>
                    <div class="ps-4">
                        <h3 class="text-uppercase mb-3">@islem.IslemAdi</h3>
                        <p>@islem.IslemAciklama</p>
                        <span class="text-uppercase text-primary">₺@islem.Ucret</span>
                        <p>Süre: @islem.Sure dakika</p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>


