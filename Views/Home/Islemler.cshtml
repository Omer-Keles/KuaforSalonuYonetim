@{
    ViewData["Title"] = "Home Page";
    var salon = ViewData["Salon"] as Salon;
    var calismaSaatleri = ViewData["CalismaSaatleri"] as List<CalismaSaatleri>;
}


<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="h-100">
                    <img class="img-fluid h-100" src="~/img/open.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="bg-secondary h-100 d-flex flex-column justify-content-center p-5">
                    <p class="d-inline-flex bg-dark text-primary py-1 px-4 me-auto">Çalışma Saatlerimiz</p>
                    <h1 class="text-uppercase mb-4">@salon?.SalonAdi</h1>

                    @foreach (var saat in calismaSaatleri)
                    {
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <h6 class="text-uppercase mb-0">@saat.Gun</h6>
                            <span class="text-uppercase">@saat.BaslangicSaati - @saat.BitisSaati</span>
                        </div>
                    }
                    <div class="d-flex justify-content-between py-2">
                        <h6 class="text-uppercase mb-0">Pazar</h6>
                        <span class="text-uppercase text-primary">Kapalı</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
