@model IEnumerable<KuaforSalonuYonetim.Models.Salon>

<div class="container my-5">
    <h1 class="text-center mb-4">Salonlar</h1>
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-light">
            <tr>
                <th>Salon Adı</th>
                <th>Adres</th>
                <th>Telefon</th>
                <th>İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var salon in Model)
            {
            <tr>
                <td>@salon.SalonAdi</td>
                <td>@salon.Adres</td>
                <td>@salon.Telefon</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@salon.SalonId" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil-square"></i> Düzenle
                    </a>
                    <a asp-action="CalismaSaatleri" asp-route-salonId="@salon.SalonId" class="btn btn-sm btn-light">
                        <i class="bi bi-clock"></i> Çalışma Saatleri
                    </a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>
