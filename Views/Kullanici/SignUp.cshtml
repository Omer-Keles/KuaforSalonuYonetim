@model KuaforSalonuYonetim.Models.Kullanici

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%;">
        <h2 class="text-center text-primary mb-4">Sign Up</h2>
        <form method="post">
            <div class="form-group mb-3">
                <label for="Kullanici_Adi" class="form-label">Ad:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="Kullanici_Adi" name="Kullanici_Adi" placeholder="Adınızı girin" required />
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="Kullanici_Soyad" class="form-label">Soyad:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="Kullanici_Soyad" name="Kullanici_Soyad" placeholder="Soyadınızı girin" required />
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="Kullanici_Email" class="form-label">E-posta:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" id="Kullanici_Email" name="Kullanici_Email" placeholder="E-posta adresinizi girin" required />
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="Kullanici_Telefon" class="form-label">Telefon:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    <input type="text" class="form-control" id="Kullanici_Telefon" name="Kullanici_Telefon" placeholder="Telefon numaranızı girin" required />
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="Kullanici_Parola" class="form-label">Parola:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="Kullanici_Parola" name="Kullanici_Parola" placeholder="Parolanızı girin" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
        </form>
        <p class="text-center mt-3">
            Zaten hesabınız var mı?
            <a href="@Url.Action("Login", "Kullanici")" class="text-decoration-none text-primary">Giriş Yap</a>
        </p>
    </div>
</div>