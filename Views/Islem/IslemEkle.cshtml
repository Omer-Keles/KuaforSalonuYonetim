@model KuaforSalonuYonetim.Models.Islem

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white text-center">
            <h3>Yeni İşlem Ekle</h3>
        </div>
        <div class="card-body">
            <form asp-action="IslemEkle" method="post">
                <div class="mb-3">
                    <label asp-for="IslemAdi" class="form-label">Adı</label>
                    <input asp-for="IslemAdi" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="IslemAciklama" class="form-label">Açıklama</label>
                    <textarea asp-for="IslemAciklama" class="form-control" required></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="Ucret" class="form-label">Ücret</label>
                    <input asp-for="Ucret" type="number" class="form-control" step="0.01" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Sure" class="form-label">Süre (dk)</label>
                    <input asp-for="Sure" type="number" class="form-control" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>